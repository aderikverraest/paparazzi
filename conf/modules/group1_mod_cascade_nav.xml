<!DOCTYPE module SYSTEM "module.dtd">

<module name="group1_mod_cascade_nav" dir="group1_cascade_nav">
  <doc>
    <description>
        Cascade Navigator
    </description>
    <define name="CASCADE_FILTER_ID" value="ABI_BROADCAST" description="which VISUAL_DETECTION message to recieve for orange pole detection."/>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="CascadeNav">
         <dl_setting var="oag_color_count_frac" min="0" step="0.01" max="0.5"/>
         <dl_setting var="oag_max_speed" min="0" step="0.1" max="1"/>
         <dl_setting var="oag_heading_rate" min="0" step="5" max="45" unit="rad" alt_unit="deg"/>
        <dl_setting var="floor_color_count_frac" min="0" step="0.01"  max="1"/>
      </dl_settings>
    </dl_settings>
  </settings>
  
  <dep>
    <depends>group1_mod_cascade_filter</depends>
  </dep>

  <header>
    <file name="cascade_avoid.h"/>
  </header>
  <init fun="cascade_avoid_init()"/>
  <periodic fun="cascade_avoid_periodic()" freq="100"/>
  <makefile target="ap|nps">
    <file name="cascade_avoid.c"/>
  </makefile>
</module>
